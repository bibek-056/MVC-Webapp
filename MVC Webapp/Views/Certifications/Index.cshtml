@model IEnumerable<MVC_Webapp.Models.Certifications>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.institute)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.issued_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.institute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.issued_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.certificate_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.certificate_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.certificate_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
